<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="14dp"
    android:paddingBottom="28dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/ys_display_medium"
        android:letterSpacing="0.01"
        android:text="@string/main_screen_title"
        android:textColor="@color/white"
        android:textSize="@dimen/main_screen_title_text_size"
        tools:ignore="TextContrastCheck" />

    <Button
        style="@style/main_activity_buttons_style"
        android:id="@+id/search"
        android:text="@string/search_button_text"
        app:icon="@drawable/search_icon" />

    <Button
        style="@style/main_activity_buttons_style"
        android:id="@+id/media"
        android:text="@string/media_button_text"
        app:icon="@drawable/media_icon"/>

    <Button
        style="@style/main_activity_buttons_style"
        android:id="@+id/settings"
        android:text="@string/settings_button_text"
        app:icon="@drawable/setting_icon"/>

</LinearLayout>
