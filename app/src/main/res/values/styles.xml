<?xml version="1.0" encoding="utf-8"?>
<resources>


<!--    MARK: - Main Screen-->
    <style name="main_activity_buttons_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginTop">@dimen/main_screen_button_margin_top</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/main_screen_button_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/main_screen_button_corner_radius</item>
        <item name="iconPadding">@dimen/main_screen_button_icon_padding</item>
        <item name="iconTint">@color/main_screen_icon_tint_color</item>
        <item name="iconGravity">textStart</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
<!--    MARK: - Settings Screen-->
    <style name="settings_menu_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">@dimen/settings_font_weight</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="switchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:switchMinWidth">32dp</item>
        <item name="android:layout_height">48dp</item>
        <!--        <item name="android:checked">true</item>-->
    </style>

    <style name="settings_icon_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">?attr/colorOnSecondary</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="settings_linear_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_element_height</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
    </style>

<!--    MARL: - Search Screen-->
    <style name="search_icon_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">?attr/colorOnPrimary</item>
        <item name="android:layout_gravity">center_vertical</item>

    </style>
    <style name="search_linear_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_element_height</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>



</resources>